<Window x:Class="WpfRevisionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revision App" Height="400" Width="400">
    <StackPanel Margin="10">
        <Button Name="StartWorkerBtn" Content="Start BackgroundWorker" Margin="5"/>
        <Button Name="CancelWorkerBtn" Content="Cancel BackgroundWorker" Margin="5"/>
        <ProgressBar Name="ProgressBar" Height="20" Margin="5"/>
        <TextBox Name="OutputBox" Height="60" Margin="5"/>
        <Button Name="ThreadTestBtn" Content="Start Threads" Margin="5"/>
        <Button Name="IsoStorageBtn" Content="Test Isolated Storage" Margin="5"/>
    </StackPanel>
</Window>
